<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet  version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:xalan="http://xml.apache.org/xslt">
	<xsl:output method="xml" indent="yes" xalan:indent-amount="2" />
	<xsl:template match="/Shipments">
		<MultiApi>
			<xsl:for-each select="Shipment">
				<API FlowName="" IsExtendedDbApi="" Name="changeShipment" Version="">
					<Input>
						<Shipment Action="Cancel" BackOrderRemovedQuantity="Y">
							<xsl:attribute name="ShipmentKey">
								<xsl:value-of select="@ShipmentKey" />
							</xsl:attribute>
					<ShipmentLines>
					<xsl:for-each select="ShipmentLines/ShipmentLine">
						<ShipmentLine BackroomPickedQuantity="0.00" Quantity="0.00" ShortageQty="1">
							<xsl:attribute name="ShipmentLineKey">
								<xsl:value-of select="@ShipmentLineKey" />
							</xsl:attribute>
						</ShipmentLine>
					</xsl:for-each>
					</ShipmentLines>
						</Shipment>
					</Input>
					<Template>
				            <Shipment ShipmentKey="" Status=""/>
				        </Template>
				</API>
			</xsl:for-each>
		</MultiApi>
	</xsl:template>
</xsl:stylesheet>