<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet  version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:xalan="http://xml.apache.org/xslt">
	<xsl:output method="xml" indent="yes" xalan:indent-amount="2" />
	<xsl:template match="/Shipments">
		<MultiApi>
			<xsl:for-each select="Shipment">
				<API FlowName="" IsExtendedDbApi="" Name="changeShipment" Version="">
					<Input>
						<Shipment Action="Modify">
							<xsl:attribute name="ShipmentKey">
								<xsl:value-of select="@ShipmentKey" />
							</xsl:attribute>
					<Containers>
					<xsl:for-each select="Containers/Container">
						<Container Action="Modify" TrackingNo="" >
							<xsl:attribute name="ShipmentContainerKey">
								<xsl:value-of select="@ShipmentContainerKey" />
							</xsl:attribute>
						</Container>
					</xsl:for-each>
					</Containers>
				</Shipment>
					</Input>
				</API>
			</xsl:for-each>
		</MultiApi>
	</xsl:template>
</xsl:stylesheet>